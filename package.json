{
  "name": "my-cli-bicycle-template",
  "version": "1.0.0",
  "description": "Невероятно простой одноколесный велосипед из CLI инструментов, перемотанный синей изолентой. Присутствуют пасхалки в виде костылей",
  "repository": "https://github.com/newbornfrontender/my-cli-bicycle-template.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prettier:list": "prettier --list-different **/*.{html,js,json,md,.stylelintrc}",
    "prettier:write": "prettier --write **/*.{html,js,json,md,.stylelintrc} !src/**/*.js",
    "eslint": "eslint --config .eslintrc/prettier.json src/**/*.js",
    "eslint:check": "eslint --config .eslintrc/prettier.json --print-config . | eslint-config-prettier-check",
    "eslint:fix": "eslint --config .eslintrc/prettier.json --fix src/**/*.js",
    "babel": "babel src --out-dir lib",
    "babel:watch": "yarn babel --watch",
    "rollup": "rollup --config",
    "rollup:watch": "yarn rollup --watch",
    "build": "yarn babel && yarn rollup"
  },
  "dependencies": {
    "@polymer/lit-element": "^0.6.3",
    "lit-html": "^0.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-lit": "^0.4.1",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "rollup": "^0.67.1",
    "rollup-plugin-node-resolve": "^3.4.0",
    "stylelint": "^9.8.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-prettier": "^1.0.5"
  }
}
